<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/static/style.css">
    <title>Login</title>
</head>

<body class="page">

    <!-- Header -->
    <header class="header">
        <div class="header-container">
            <h1 class="site-title">Recipe Website Name</h1>

            <nav class="nav">
                <div class="menu-btn" onclick="toggleMenu()">
                    <img src="/images/menu_button.svg" alt="Menu">
                </div>
                <ul id="menu" class="menu-list">
                    <li><a class="menu-link" href="/">Home</a></li>
                </ul>
            </nav>
        </div>
    </header>


    <!-- Login Section -->
    <section class="auth-section">
        <div class="auth-card">
            <h2 class="auth-title">Login</h2>

            <% if (typeof error !=="undefined" ) { %>
                <p class="error-msg">
                    <%= error %>
                </p>
                <% } %>

                    <form action="/users/login" method="POST" class="auth-form">
                        <label for="login-username" class="input-label">Username</label>
                        <input id="login-username" name="username" type="text" class="input-field" required>

                        <label for="login-password" class="input-label">Password</label>
                        <input id="login-password" name="password" type="password" class="input-field" required>

                        <button class="btn submit-btn" type="submit">Login</button>
                    </form>
        </div>
    </section>


    <!-- Signup/New Account Section -->
    <section class="auth-section">
        <div class="auth-card">
            <h2 class="auth-title">Create an Account</h2>

            <% if (typeof signupError !=="undefined" ) { %>
                <p class="error-msg">
                    <%= signupError %>
                </p>
                <% } %>

                    <form action="/users/signup" method="POST" class="auth-form">
                        <label for="signup-username" class="input-label">Username</label>
                        <input id="signup-username" name="username" type="text" class="input-field" required>

                        <label for="signup-password" class="input-label">Password</label>
                        <input id="signup-password" name="password" type="password" class="input-field" required>

                        <button class="btn submit-btn" type="submit">Create Account</button>
                    </form>
        </div>
    </section>


    <footer class="footer">
        <p class="footer-text">Recipe Website</p>
    </footer>

    <script src="/static/main.js"></script>
</body>

</html>